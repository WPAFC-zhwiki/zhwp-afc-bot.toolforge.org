{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "Node16",
		"baseUrl": "src",
		"paths": {
			"@app/*": [
				"./*"
			]
		},
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noEmitOnError": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": [
		"src/",
		"types/"
	]
}